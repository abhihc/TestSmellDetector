<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="CodeSmell.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="CodeSmell.commands.category"
            name="Detect Code Smells"
            id="CodeSmell.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="codesmell.handlers.TestSmellDetectorHandler"
            commandId="CodeSmell.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="CodeSmell.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="CodeSmell.menus.sampleMenu"
               label="Test Smell Detector"
               mnemonic="M">
            <command
                  commandId="CodeSmell.commands.sampleCommand"
                  id="CodeSmell.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="CodeSmell.toolbars.sampleToolbar">
            <command
                  id="CodeSmell.toolbars.sampleCommand"
                  commandId="CodeSmell.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Welcome">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
